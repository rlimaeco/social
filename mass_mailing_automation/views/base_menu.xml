<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Marketing Automation -->
        <menuitem
                id="mass_mailing_automation_main_menu"
                name="Marketing Automation"
                web_icon="mass_mailing_automation,static/description/icon.png"
                groups="mass_mailing.group_mass_mailing_user" />

        <!-- Marketing Automation / Campanhas -->
        <menuitem
                name="Campanhas"
                id="mass_mailing_automation_utm_campaign_menu"
                parent="mass_mailing_automation_main_menu"
                sequence="10"
                action="mass_mailing_automation_utm_campaign_action" />

        <!-- Marketing Automation / Lista de Contatos -->
        <menuitem
                name="Lista de Contatos"
                id="mass_mailing_automation_mailing_list_menu"
                parent="mass_mailing_automation_main_menu"
                sequence="20"
                action="mass_mailing.action_view_mass_mailing_lists" />

        <!-- Marketing Automation / Contatos -->
        <menuitem
                name="Contatos"
                id="mass_mailing_automation_mailing_contacts_menu"
                parent="mass_mailing_automation_main_menu"
                sequence="30"
                action="mass_mailing.action_view_mass_mailing_contacts" />

        <!-- Marketing Automation / Configuration -->
        <menuitem
                name="Configuration"
                id="mass_mailing_automation_configuration_menu"
                parent="mass_mailing_automation_main_menu"
                sequence="100" />

        <!-- Marketing Automation / Configuration / Blacklist -->
        <menuitem
                name="Blacklist"
                id="mass_mailing_automation_blacklist_menu"
                action="mail.mail_blacklist_action"
                parent="mass_mailing_automation_configuration_menu" />

        <!-- Marketing Automation / Configuration / Modelo de Email -->
        <menuitem
                name="Modelo de E-mail"
                id="mass_mailing_automation_mail_template_menu"
                action="mass_mailing_automation.mass_mailing_automation_mail_template_action"
                parent="mass_mailing_automation_configuration_menu" />

</odoo>

